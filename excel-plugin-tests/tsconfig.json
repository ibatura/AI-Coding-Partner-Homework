{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": ".",
    "types": [
      "node",
      "@wdio/mocha-framework",
      "expect-webdriverio"
    ]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "wdio.*.conf.ts"],
  "exclude": ["node_modules", "dist", "allure-results", "allure-report"]
}
